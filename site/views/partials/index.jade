.row.main
  .col-md-12
  div(ng-repeat='event in events | filter:searchWord | extractionTime:selectedTerm.time | extractionTweetNum:selectedTweetNum.num')
    .col-md-6
      .jumbotron
        .jumbotron-contents.jumbotron-bg
          h3
            a(href="/detail/{{event.eventId}}")
             | {{event.title}}
          p
            p.lead.sub-text
              span.line 開催時刻： {{event.startedAt}} ~ {{event.endedAt}}
              span.line.hast-tag # {{event.hashTag}}
          p
            a(slide-toggle="#i{{$index}}")
              i.fa.fa-angle-down.fa-3x.detail-arrow
            .slideable(id="i{{$index}}")
              base(target='_blank')
              span(ng-bind-html="event.description")
              a(slide-toggle="#i{{$index}}")
                i.fa.fa-angle-up.fa-3x.detail-arrow
          span.tweet-number
            | {{event.tweetNum}}

